<%- include('../partials/header'); -%>

<div class="container">
	<div class="jumbotron">
		<div class="container">
			<h1>
				Welcome to YelpCamp!
			</h1>
			<p>
				View our hand-picked camp grounds drom around the world.
			</p>	
			<p>
				<a class="btn btn-primary btn-large" href="/campGround/new">Add new Campground</a>
			</p>
		</div>

	</div>

	<div class="row text-center">
		<% campGround.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6">
			<div class="card">
				<img class="img-fluid img-thumbnail" src ="<%= camp.image %>">
				<div class="caption">
					<h4>
					<%= camp.name %>
					</h4>
					<a href="/campGround/<%= camp._id %>" class="btn btn-primary">more info</a>
				</div>
			</div>
		</div>	
		<% }) %>
	</div>	
</div>
<%- include('../partials/footer'); -%>